<html>
    <head>
        <title>Artificial neural network (manual learning)</title>
        <script type="text/javascript">

	 function calc() {
	     i1=document.getElementById( "i1" ).value;
	     i2=document.getElementById( "i2" ).value;
	     h1=document.getElementById( "h1" ).value;
	     h2=document.getElementById( "h2" ).value;
	     h3=document.getElementById( "h3" ).value;
	     h4=document.getElementById( "h4" ).value;
	     o1=document.getElementById( "o1" ).value;
	     o2=document.getElementById( "o2" ).value;
	 }
	 
	</script>
    </head>
    <body>
	<table border ="1">
	    <tr>
		<td>Input: </td><td><input type="text" value="1" size="5" id="i1"></td><td><input type="text" value="1" size="5" id="i2"></td><td><button onClick="calc();">Go!</button></td>
	    </tr>
	    <tr><td colspan="5" align="center">Fully connected</td></tr>
	    <tr>
		<td>Hidden weights: </td><td><input type="text" value="1" size="5" id="hw1"></td><td><input type="text" value="1" size="5" id="hw2"></td><td><input type="text" value="1" size="5" id="hw3"></td><td><input type="text" value="1" size="5" id="hw4"></td>
	    </tr>
	    <tr>
		<td>Hidden: </td><td><div id="h1"></div></td><td><div id="h2"></div></td><td><div id="h3"></div></td><td><div id="h4"></div></td>
	    </tr>
	    <tr><td colspan="5" align="center">Fully connected</td></tr>
	    <tr>
		<td>Output weights: </td><td><input type="text" value="1" size="5" id="ow1"></td><td><input type="text" value="1" size="5" id="ow2"></td>
	    </tr>
	    <tr>
		<td>Output: </td><td><div id="o1"></div></td><td><div id="o2"></div></td>
	    </tr>
	</table>
